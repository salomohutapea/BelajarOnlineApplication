<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPasswordActivity"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:id="@+id/tvEmailForgot"
            android:textSize="60px"
            android:layout_marginBottom="40px"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorPrimary"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Email"
            android:fontFamily="@font/montserrat"
            android:backgroundTint="@color/colorAccent"
            android:textColorHint="@color/color1"
            android:ems="10"
            android:layout_below="@id/tvEmailForgot"
            android:layout_marginRight="40px"
            android:layout_marginLeft="40px"
            android:id="@+id/etEmailForgot"
            android:textColorHighlight="@color/color1"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etEmailForgot"
            android:backgroundTint="@color/color1"
            android:text="reset password"
            android:id="@+id/btReset"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="40px"
            android:layout_marginStart="40px"
            android:layout_marginEnd="40px"
            android:layout_marginBottom="40px"/>
    <TextView
            android:text="Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btReset"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="40px"
            android:id="@+id/tvSignInForgot"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>
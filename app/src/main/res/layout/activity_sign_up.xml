<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:background="@android:color/white">

    <TextView
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleSignUp"
            android:textSize="60px"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="100px"
            android:layout_marginLeft="40px"
            android:layout_marginBottom="100px"
            android:textColor="@color/colorPrimary"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ScrollViewCount"
            android:layout_below="@id/tvTitleSignUp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.v7.widget.CardView android:layout_width="125dp"
                                                android:layout_height="125dp"
                                                app:cardCornerRadius="20dp"
                                                android:layout_margin="40px"
                                                android:padding="10px"
            >
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/selectPhotoButton" android:background="#FFF">
                    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                              android:text="PILIH\nFOTO" android:gravity="center" android:id="@+id/pilihFotoTextView"
                              android:textSize="15sp" android:textColor="#000"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                    android:text="Nama Lengkap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvFullNameSignUp"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/montserrat"
                    android:hint="Nama Lengkap"
                    android:backgroundTint="@color/colorAccent"
                    android:textColorHint="@color/color1"
                    android:ems="10"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/etFullName"
                    android:textColorHighlight="@color/color1"/>
            <TextView
                    android:text="Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvTitleUsername"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Username"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:textColorHint="@color/color1"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/etUsername"/>
            <TextView
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvTitleEmail"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:ems="10"
                    android:textColorHint="@color/color1"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/etEmail"/>
            <TextView
                    android:text="Kata Sandi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvPasswordSignUp"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Kata Sandi"
                    android:fontFamily="@font/montserrat"
                    android:ems="10"
                    android:textColorHint="@color/color1"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/etPasswordSignUp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                    <TextView
                            android:text="Tingkat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40px"
                            android:layout_marginLeft="40px"
                            android:id="@+id/tvGrade"
                            android:textSize="60px"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/colorPrimary"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="40px"
                                android:layout_marginTop="40px"
                                android:layout_marginBottom="40px"
                                android:fontFamily="@font/montserrat"
                                android:textSize="15dp"
                                android:gravity="center_vertical|start"
                                android:textColor="#000"
                                android:id="@+id/tvSpinnerGrade"
                                android:layout_weight="1"/>
                        <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="100px"
                                android:id="@+id/spinnerGrade"
                                android:layout_marginRight="40px"
                                android:layout_marginTop="40px"
                                android:layout_marginBottom="40px"
                                android:layout_weight="3"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                    <TextView
                            android:text="Jurusan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40px"
                            android:layout_marginLeft="40px"
                            android:id="@+id/tvMajor"
                            android:textSize="60px"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/colorPrimary"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="40px"
                                android:layout_marginTop="40px"
                                android:layout_marginBottom="40px"
                                android:fontFamily="@font/montserrat"
                                android:textSize="15dp"
                                android:gravity="center_vertical|start"
                                android:textColor="#000"
                                android:id="@+id/tvSpinnerMajor"
                                android:layout_weight="1"/>
                        <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="100px"
                                android:id="@+id/spinnerMajor"
                                android:layout_marginRight="40px"
                                android:layout_marginTop="40px"
                                android:layout_marginBottom="40px"
                                android:layout_weight="3"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:text="Kurikulum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvKurikulum"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="40px"
                        android:layout_marginBottom="40px"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15dp"
                        android:gravity="center_vertical|start"
                        android:textColor="#000"
                        android:id="@+id/tvSpinnerKurikulum"
                        android:layout_weight="1"/>
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:id="@+id/spinnerKurikulum"
                        android:layout_marginRight="40px"
                        android:layout_marginTop="40px"
                        android:layout_marginBottom="40px"
                        android:layout_weight="6"/>
            </LinearLayout>
            <TextView
                    android:text="Jenis Kelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvJenisKelamin"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="40px"
                        android:layout_marginBottom="40px"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15dp"
                        android:gravity="center_vertical|start"
                        android:textColor="#000"
                        android:id="@+id/tvSpinnerJenisKelamin"
                        android:layout_weight="1"/>
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:id="@+id/spinnerJenisKelamin"
                        android:layout_marginRight="40px"
                        android:layout_marginTop="40px"
                        android:layout_marginBottom="40px"
                        android:layout_weight="6"/>
            </LinearLayout>
            <TextView
                    android:text="Nomor Telepon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvPhoneNumber"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:text="+62"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:id="@+id/tv62"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@android:color/darker_gray"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Nomor Telepon"
                        android:fontFamily="@font/montserrat"
                        android:ems="10"
                        android:textColorHint="@color/color1"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_marginRight="40px"
                        android:layout_marginLeft="40px"
                        android:id="@+id/etPhoneNumber"/>
            </LinearLayout>
            <TextView
                    android:text="Alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvAlamatSignUp"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Alamat"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:textColorHint="@color/color1"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/etAlamatSignUp"/>
            <TextView
                    android:text="Provinsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvProvinsiSignUp"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Provinsi"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:textColorHint="@color/color1"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/etProvinsiSignUp"/>
            <TextView
                    android:text="Kabupaten/Kota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvKabKotSignUp"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Kabupaten/Kota"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:textColorHint="@color/color1"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/etKabKotSignUp"/>
            <TextView
                    android:text="Nama Sekolah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvSekolahSignUp"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Nama Sekolah"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:textColorHint="@color/color1"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/etSekolahSignUp"/>
            <TextView
                    android:text="Nama Orangtua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvNamaOrtuSignUp"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Nama Orangtua"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:textColorHint="@color/color1"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/etNamaOrtuSignUp"/>
            <TextView
                    android:text="Nomor Telepon Orangtua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:id="@+id/tvNoOrtu"
                    android:textSize="60px"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:text="+62"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:id="@+id/tv622"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@android:color/darker_gray"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Nomor Telepon Orangtua"
                        android:fontFamily="@font/montserrat"
                        android:ems="10"
                        android:textColorHint="@color/color1"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_marginRight="40px"
                        android:layout_marginLeft="40px"
                        android:id="@+id/etNoOrtu"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="40px"
                        android:id="@+id/agreeCheckBox"
                        android:backgroundTint="@color/colorPrimary"/>
                <TextView
                        android:text="Saya telah menyetujui syarat dan ketentuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="40px"
                        android:id="@+id/tvAgree"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@android:color/darker_gray"/>

            </LinearLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/color1"
                    android:text="Sign Up"
                    android:id="@+id/btSignUp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="40px"
                    android:layout_marginStart="40px"
                    android:layout_marginEnd="40px"
                    android:layout_marginBottom="40px"/>
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50px">
                <TextView
                        android:text="Sudah punya akun?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:id="@+id/tvDont"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@android:color/darker_gray"/>
                <TextView
                        android:text="Sign in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tvDont"
                        android:layout_marginLeft="40px"
                        android:id="@+id/tvSignIn"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimaryDark"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>